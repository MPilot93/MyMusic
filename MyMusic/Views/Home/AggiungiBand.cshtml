@model BandViewModel;

@{
    ViewBag.Title = "Aggiungi Band";
}

@if (ViewBag.Message != null)
{
    <div roll="alert" class="alert alert-success">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div>Aggiungi nuovo Brano</div>
        <hr>
        @Html.HiddenFor(model => model.ID)
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.IdArtista, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdArtista)
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.Immagine, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Immagine)
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.Genere, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Genere)
            </div>
        </div>
        
         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aggiungi" class="btn btn-primary"/>
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Indietro","Index")
</div>


